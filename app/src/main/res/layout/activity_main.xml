<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:gravity="top" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BookTrack"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/>

    <!-- Add a Book Button -->
    <Button
        android:id="@+id/add_book_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="book list"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"/>

    <!-- Book List Button -->
    <Button
        android:id="@+id/book_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time to read"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"/>

    <!-- Search Books Button -->
    <Button
        android:id="@+id/search_books_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Books"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"/>

    <!-- Reading Progress Button -->
    <Button
        android:id="@+id/reading_progress_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading Progress"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"/>

    <!-- Settings Button -->
    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"/>

</LinearLayout>